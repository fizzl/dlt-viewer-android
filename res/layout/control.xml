<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:orientation="vertical" >

  <ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:id="@+id/log_scroll"
    android:layout_weight="1">
      <TableLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/filter_table"
         android:stretchColumns="*" >
            <TableRow>
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="0=off, 1=fatal, 2=error, 3=warn, 4=info, 5=debug, 6=verbose"
                  android:textStyle="normal" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:background="#FF909090"
                    android:padding="2dip" />
            </TableRow>
            <TableRow>
              <TextView
                  android:text="@string/default_level"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:textSize="20dp"
                  android:textStyle="normal"/>
              <EditText
                android:id="@+id/default_level"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="20dp"
                android:text="4"
                />
              <Button
                android:id="@+id/btn_default_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ok"
                android:onClick="setDefaultLogLevel"
                                  android:padding="10dp"
                  android:textSize="20dp"
                  android:textStyle="normal" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:background="#FF909090"
                    android:padding="2dip" />
            </TableRow>
            <TableRow>
              <TextView
                  android:text="APID"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:padding="10dp"
                  android:textSize="20dp"
                  android:textStyle="normal"/>
              <TextView
                  android:text="CTID"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:padding="10dp"
                  android:textSize="20dp"
                  android:textStyle="normal"/>
              <TextView
                  android:text="LEVEL"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:padding="10dp"
                  android:textSize="20dp"
                  android:textStyle="normal"/>
              <TextView
                  android:text="SET"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:padding="10dp"
                  android:textSize="20dp"
                  android:textStyle="normal"/>
            </TableRow>
            <TableRow>
              <EditText
                  android:id="@+id/special_apid"
                  android:text="*"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:padding="10dp"
                  android:textSize="20dp"
                  android:textStyle="normal"/>
              <EditText
                  android:id="@+id/special_ctid"
                  android:text="*"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:padding="10dp"
                  android:textSize="20dp"
                  android:textStyle="normal"/>
              <EditText
                  android:id="@+id/special_level"
                  android:text="4"
                  android:inputType="number"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:padding="10dp"
                  android:textSize="20dp"
                  android:textStyle="normal"/>
              <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ok"
                android:onClick="setSpecialLogLevel"
                                  android:padding="10dp"
                  android:textSize="20dp"
                  android:textStyle="normal" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:background="#FF909090"
                    android:padding="2dip" />
            </TableRow>
            <TableRow>
              <TableLayout
                 xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/apid_ctid_table"
                 android:stretchColumns="*" >
              </TableLayout>
            </TableRow>
    </TableLayout>
  </ScrollView>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/exit"
        android:onClick="returnControl" />

  </LinearLayout>
</LinearLayout>
